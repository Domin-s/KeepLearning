@using KeepLearning.Application.Common.Models.Exam.Country

@model ExamCountryDto

@{
    ViewData["Title"] = "Resolve";
}

<div>
    <div class="form-group">
        <div class="container">
            <div class="row align-items-start">
                <div>
                    <h3>Test parameters:</h3>

                    @if (Model.Name != null)
                    {
                        <div class="row m-2">
                            <div class="col-10">Test name: @Model.Name</div>
                        </div>
                    }

                    <div class="col-10">Number of questions: <span class="fw-bold">@Model.Questions.Count()</span></div>

                    <div class="col-10">Guess type:
                        @if (@Model.Category.ToString() == "Country")
                        {
                            <span class="fw-bold">Country</span>
                        }
                        else
                        {
                            <span class="fw-bold">Capital city</span>
                        }
                    </div>

                    <div class="col-10">
                        Choosen continents:
                        <ul>
                            @foreach (var continent in Model.Continents)
                            {
                                <li class="fw-bold">@continent.Name</li>
                            }
                        </ul>
                    </div>
                </div>

                <hr />

                <div class="row m-4">
                    <div class="col-xs-10 col-sm-8 col-md-4 col-lg-3 m-2">
                        <a asp-action="Create" class="btn btn-primary" role="button">Back to creator</a>
                    </div>
                    <div class="col-xs-10 col-sm-8 col-md-4 col-lg-3 m-2">
                        <form method="post" action="Create">
                            <div hidden>
                                <input id="Name" name="Name" value="@Model.Name" />
                                <input id="NumberOfQuestion" name="NumberOfQuestion" value="@Model.Questions.Count()" />
                                <input id="GuessType" name="Category" value="@Model.Category" />
                                @foreach (var continent in Model.Continents)
                                {
                                    <input value="@continent.Name" id="Continents" name="Continents">
                                }
                            </div>
                            <input type="submit" value="Create a different exam with the same parameters"
                                class="btn btn-primary" />
                        </form>
                    </div>
                </div>

                <hr />
            </div>
        </div>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th class="col-1">
                    Number
                </th>
                <th class="col-4">
                    @if (@Model.Category.ToString() == "Country")
                    {
                        <div>Capital city</div>
                    }
                    else
                    {
                        <div>Country</div>
                    }
                </th>
                <th class="col-4">
                    @if (@Model.Category.ToString() == "Country")
                    {
                        <div>Country</div>
                    }
                    else
                    {
                        <div>Capital city</div>
                    }
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Questions)
            {
                <tr class="Question_@item.QuestionNumber Question">
                    <td>
                        <div>@item.QuestionNumber</div>
                        <input type="text" class="form-control" name="NumberQuestion[@item.QuestionNumber]"
                            id="NumberQuestion_@item.QuestionNumber" value="@item.QuestionNumber" hidden>
                    </td>
                    <td>
                        <div>@item.QuestionText</div>
                        <input type="text" class="form-control" name="QuestionText[@item.QuestionNumber]"
                            id="QuestionText_@item.QuestionNumber" value="@item.QuestionText" hidden>
                    </td>
                    <td>
                        <input type="text" class="form-control Answer" name="Answer[@item.QuestionNumber]"
                            id="Answer_@item.QuestionNumber" placeholder="Type answer">
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="Result" style="display: none">
        <div>Corect answers: <spn class="CorrectAnswers"></spn>
        </div>
        <div>Incorrect answers: <spn class="IncorrectAnswers"></spn>
        </div>
    </div>


    <hr />

    <div>
        <div class="row m-4">
            <div class="col-xs-10 col-sm-8 col-md-4 col-lg-3 m-2">
                <a id="checkAnswers" class="btn btn-success col-sm-10" role="button">Check answers</a>
            </div>
        </div>

        <div class="row m-4">
            <div class="col-xs-10 col-sm-8 col-md-4 col-lg-3 m-2">
                <a id="downloadPDF" class="btn btn-success col-sm-10" role="button">Download pdf</a>
            </div>
        </div>

        <div class="row m-4">
            <div class="col-xs-10 col-sm-8 col-md-4 col-lg-3 m-2">
                <a id="downloadWord" class="btn btn-success col-sm-10" role="button">Download word</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/Exam/Check.js"></script>
}
