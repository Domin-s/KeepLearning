@model IEnumerable<string>

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>CreateTestViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" action="Create">
            <div class="form-group">
                <label for="Name" class="control-label"></label>
                <input id="Name" class="form-control" name="Name" />
            </div>
            <div class="form-group">
                <label for="NumberOfQuestion" class="control-label"></label>

                <label for="cars">Choose number of questions</label>
                <select name="NumberOfQuestion" id="NumberOfQuestion">
                    <option value="5">5</option>
                    <option value="10">10</option>
                    <option value="20">20</option>
                    <option value="25">25</option>
                    <option value="50">50</option>
                </select>
            </div>
            <div class="form-group">
                @foreach (var continent in Model)
                {

                    <input type="checkbox" name="Continents" for="continent" class="form-check-input" value="@continent" />
                    <label class="form-check-label" id="continent">@continent</label>
                    <br />
                }
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
