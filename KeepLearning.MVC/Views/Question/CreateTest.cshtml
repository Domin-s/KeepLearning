@model IEnumerable<string>

@{
    ViewData["Title"] = "Create";
}

<h1>Create country test</h1>

<hr />

<div class="row">
    <div class="col">
        <form method="post" action="Create">
            <div class="row m-2">
                <div class="col-3">Test name: </div>
                <input id="Name" class="col-5" name="Name" />
            </div>
            <div class="row m-2">
                <div class="col-3">Choose number of questions:</div>
                <select name="NumberOfQuestion" class="col-5" id="NumberOfQuestion">
                    <option value="5">5</option>
                    <option value="10">10</option>
                    <option value="20">20</option>
                    <option value="25">25</option>
                    <option value="50">50</option>
                </select>
            </div>

            <div class="row m-2">
                <div class="col-3">Choose continents: </div>

                <div class="form-group col-5">
                    @foreach (var continent in Model)
                    {
                        <input type="checkbox" name="Continents" for="continent" class="form-check-input" value="@continent" />
                        <label class="form-check-label" id="continent">@continent</label>
                        <br />
                    }
                </div>
            </div>
            <div class="row m-4 col-6">
                <div class="col-4">
                    <a asp-controller="Country" asp-action="List" class="btn btn-primary" role="button">Back to list</a>
                </div>
                <div class="col-4">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
